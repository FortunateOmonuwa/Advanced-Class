{

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"

      }
    },

    "Enrich": [
      "WithThreadId",
      "WithThreadName",
      "WithProcessId",
      "WithProcessName",
      "WithEnvironmentName",
      "WithMachineName"
    ],

    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "path": "Log/log.text",
          "rollingInterval": "Day",
          "closingDelimiter": "\n",
          "renderMessage": true,
          "useSpaces": true,
          "applyAdditionLevelPadding": true
        }
      },
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "path": "Log/log.text",
          "rollingInterval": "Day",
          "closingDelimiter": "\n",
          "renderMessage": true,
          "useSpaces": true,
          "applyAdditionLevelPadding": true
        }
      }
    ],
    "Properties": {
      "ApplicationName": "Inventory",
      "Enviroment": "Development"
    }
  },

  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "InventoryConnection": "Server = localhost\\SQLEXPRESS02;Database=InventoryDatabase;Trusted_Connection=True;Integrated Security=True; TrustServerCertificate=True;"
  }



}
